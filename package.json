        "express": "^4.18.2",
        "firebase": "^10.7.0",
        "firebase-admin": "^11.11.1",
        "nanoid": "^5.0.3",
        "nodemon": "^3.0.1",
        "parcel": "^2.10.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2"
    },
    "devDependencies": {
        "process": "^0.11.10"
